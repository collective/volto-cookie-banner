{
  "printWidth": 120,
  "singleQuote": true,
  "trailingComma": "all",
  "semi": false,
  "overrides": [
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2,
        "printWidth": 200
      }
    }
  ]
}
